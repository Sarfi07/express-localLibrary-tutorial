extends layout

block content

  h1 Genre: #{genre.name}
  hr
  p
    a.btn.btn-warning(href=genre.url+'/update') Update Genre
  p 
    a.btn.btn-primary(href=genre.url+'/delete') Delete Genre

  div(style='margin-left:20px;margin-top:20px')

    h2(style='font-size: 1.5rem;') Books
    if genre_books.length
      dl
        each book in genre_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}
    else
      p This genre has no books.
